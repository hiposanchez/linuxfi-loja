<html>
  <head>
    <title> Loja  - <%= @titulo %></title>
    <%=  yield :stylesheets %>
  </head>
  <body>

    <h1> Loja - <%= yield :cabecalho %> </h1>

    <% unless flash.blank? %>
      <%
      #Flash fica disponível para todas as páginas
      flash.each do |key, value| %>
        <p class="flash_<%= key %>"> <%= value %> </p>
      <% end %>
    <% end %>
    <ul>
      <li><%= 
      #Em link_to pode-se passar um hashe contendo atributos que seriam passados para a âncora no html
      link_to( "Produto", produtos_path ) %>
      </li>
      <% unless pedido_atual.blank? %>
        <li>
          <%= link_to( "Veja o seu carrinho", itens_path ) %>
        </li>
      </ul>
    <%  end %>

    <%= #conteudo dos outros controlers
    yield  %>


  </body>
</html>

